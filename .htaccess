# Protection du dashboard analytics
<Files "dashboard_php.php">
    AuthType Basic
    AuthName "Dashboard Analytics Privé"
    AuthUserFile /home/christellelusso/public_html/.htpasswd
    Require valid-user
</Files>

# Empêcher l'accès direct aux fichiers de données
<Files "analytics_data.json">
    Order Deny,Allow
    Deny from all
</Files>

# Empêcher l'accès aux fichiers de configuration
<Files ".htpasswd">
    Order Deny,Allow
    Deny from all
</Files>

# Empêcher l'accès aux fichiers de test
<Files "test_*.html">
    Order Deny,Allow
    Deny from all
</Files>
